{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "esnext"
    ],
    "rootDir": "./src",
    "outDir": "./dist",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "incremental": true,
    "tsBuildInfoFile": "./.buildcache/auth",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "$/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "./src/**/*.ts",
    "src/@types/**/*.d.ts"
  ],
  "exclude": [
    "./src/test",
    "./src/**/*.test.ts"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}
